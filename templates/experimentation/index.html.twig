{% extends 'base.html.twig' %}

{% block title %}Experimentation index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Experimentation index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>IdExpe</th>
					<th>DateDebutExpe</th>
					<th>DateFinExpe</th>
					<th>NumSaisine</th>
					<th>NomExpe</th>
					<th>InfoExpe</th>
					<th>IdUtilResptech</th>
					<th>LienProtoSidex</th>
					<th>DateDemandeOuv</th>
					<th>InfoDemandeOuv</th>
					<th>CodeExpe</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% set newArray = [] %}
				{% for experimentation_exploitation in experimentation_exploitations %}
					{% if experimentation_exploitation.idExpe not in newArray %}
						<tr>
							<td>{{ experimentation_exploitation.idExpe }}</td>
							<td>{{ experimentation_exploitation.dateDebutExpe ? experimentation_exploitation.dateDebutExpe|date('Y-m-d') : '' }}</td>
							<td>{{ experimentation_exploitation.dateFinExpe ? experimentation_exploitation.dateFinExpe|date('Y-m-d') : '' }}</td>
							<td>{{ experimentation_exploitation.numSaisine }}</td>
							<td>{{ experimentation_exploitation.nomExpe }}</td>
							<td>{{ experimentation_exploitation.infoExpe }}</td>
							<td>{{ experimentation_exploitation.idUtilResptech }}</td>
							<td>{{ experimentation_exploitation.lienProtoSidex }}</td>
							<td>{{ experimentation_exploitation.dateDemandeOuv ? experimentation_exploitation.dateDemandeOuv|date('Y-m-d') : '' }}</td>
							<td>{{ experimentation_exploitation.infoDemandeOuv }}</td>
							<td>{{ experimentation_exploitation.codeExpe }}</td>
							<td>
								{# <a href="{{ path('experimentation_show', {'idExperimentationExploitation': experimentation_exploitation.idExperimentationExploitation}) }}">show</a> #}
								<a href="{{ path('experimentation_lots', {'idExpe': experimentation_exploitation.idExpe}) }}">Voir les lots</a>
							</td>
						</tr>
						{% set newArray = newArray|merge([experimentation_exploitation.idExpe]) %} {# distinct results by idExpe #}
					{% endif %}
				{% else %}
					<tr>
						<td colspan="25">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	<a href="{{ path('experimentation_exploitation_new') }}">Create new</a>
	</div>
{% endblock %}
