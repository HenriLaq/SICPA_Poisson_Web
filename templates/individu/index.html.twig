{% extends 'base.html.twig' %}

{% block title %}Individu index
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1>Individu index</h1>

		<table class="table striped bordered">
			<thead>
				<tr>
					<th>IdentifiantIndi</th>
					<th>Rfid</th>
					<th>NouvelEffectif</th>
					<th>DateMouvement</th>
					<th>Isentree</th>
					<th>Issortiedefinitive</th>
					<th>NomEspece</th>
					<th>LibGenre</th>
					<th>NomLot</th>
					<th>DateDebLot</th>
					<th>DateFinLot</th>
					<th>NomTest</th>
					<th>CodeExpe</th>
					<th>NomBassin</th>
					<th>NomZone</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for individu in individus %}
					<tr>
						<td>{{ individu.identifiantIndi }}</td>
						<td>{{ individu.rfid }}</td>
						<td>{{ individu.nouvelEffectif }}</td>
						<td>{{ individu.dateMouvement ? individu.dateMouvement|date('Y-m-d') : '' }}</td>
						<td>{{ individu.isentree }}</td>
						<td>{{ individu.issortiedefinitive }}</td>
						<td>{{ individu.nomEspece }}</td>
						<td>{{ individu.libGenre }}</td>
						<td>{{ individu.nomLot }}</td>
						<td>{{ individu.dateDebLot ? individu.dateDebLot|date('Y-m-d') : '' }}</td>
						<td>{{ individu.dateFinLot ? individu.dateFinLot|date('Y-m-d') : '' }}</td>
						<td>{{ individu.nomTest }}</td>
						<td>{{ individu.codeExpe }}</td>
						<td>{{ individu.nomBassin }}</td>
						<td>{{ individu.nomZone }}</td>
						<td>
							{# <a href="{{ path('individu_show', {'idIndividuExploitation': individu.idIndividuExploitation}) }}">Détails</a> #}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="26">Aucun résultat</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation">
			{{ knp_pagination_render(individus) }}
		</div>
	</div>
{% endblock %}
