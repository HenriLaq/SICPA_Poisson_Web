{% extends 'base.html.twig' %}

{% block title %}Interventions
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('experimentation_index') }}">Experimentations</a>
				</li>
				<li class="breadcrumb-item">
					<a href="{{ path('lot_index', {'idExpe': idExpe}) }}">Lots</a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Mouvements</li>
			</ol>
		</nav>

		<h1>Interventions: Lot
			{{ lot.nomLot }},
			{{ lot.nomEspece }}, souche
			{{ lot.libSouche }}</h1>

		<table class="table table-bordered table-hover" id="tableMouvement">
			<thead>
				<tr>
					<th class="notexport">Date</th>
					<th class="hidden">Date</th>
					<th>Effectif Mouvement</th>
					<th>Nouvel Effectif</th>
					<th>Type d'intervention</th>
					<th>Informations</th>
					<th>Bassin</th>
					<th>Relevé associé</th>
					<th>Individu</th>
				</tr>
			</thead>
			<tbody>
				{% for mouvement in mouvements %}
					<tr>
						<td>
							<span style="display:none;">{{ mouvement.dateMouvement ? mouvement.dateMouvement|date('Y-m-d') : '' }}</span>
							{{ mouvement.dateMouvement ? mouvement.dateMouvement|date('d-m-Y') : '' }}</td>
						<td class="hidden">{{ mouvement.dateMouvement ? mouvement.dateMouvement|date('d-m-Y') : '' }}</td>
						<td>{{ mouvement.effectifMouvement }}</td>
						<td>{{ mouvement.nouvelEffectif }}</td>
						<td>{{ mouvement.libMouv }}</td>
						<td>{{ mouvement.infoMouv }}</td>
						<td>{{ mouvement.nomBassin }}</td>
						<td>
							{% for releve in releves %}
								{% if releve.idMouvement == mouvement.idMouvement %}
									{{ releve.libTypeRelAni }}: {{ releve.valeurRelAni|round(2) }}
								{% endif %}
							{% endfor %}
						</td>
						<td>{#<a href="{{ path('individu_index', {'idLot': lot.idLot, 'idExpe': idExpe}) }}">{{ mouvement.identifiantIndi }}</a>#}{{ mouvement.identifiantIndi }}</td>
					</tr>

				{% else %}
					<tr>
						<td colspan="25">Aucun résultat</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a href="{{ path('individu_index', {'idLot': lot.idLot, 'idExpe': idExpe}) }}" class="btn btn-danger">Retour</a>
	</div>
{% endblock %}
