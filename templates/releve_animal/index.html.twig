{% extends 'base.html.twig' %}

{% block title %}Relevé Animal
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1>Relevé Animal</h1>

		<table class="table table-bordered table-hover" id="maTable">
			<thead>
				<tr>
					<th>Date</th>
					<th>Valeur</th>
                    <th>Libellé</th>
                    <th>Info</th>
				</tr>
			</thead>

			{% for releve in releves %}

				<tr>
					<td><span style="display:none;">{{ releve.dateRelAni ? releve.dateRelAni|date('Y-m-d') : ''}}</span>{{ releve.dateRelAni ? releve.dateRelAni|date('d-m-Y') : ''}}</td>
					<td>{{ releve.valeurRelAni }}</td>
                    <td>{{ releve.libTypeRelAni }}</td>
                    <td>{{ releve.infotypeRelAni }}</td>
				</tr>

			{% else %}
				<tr>
					<td colspan="25">Aucun résultat</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('individu_index', {'idLot': idLot, 'idExpe': idExpe}) }}" class="btn btn-danger">Retour</a>
</div>{% endblock %}
