												var day = ( ({{ releve.dateRelAni ? releve.dateRelAni|date('d') : '' }}).toString() )
												
												donneesTemp[(day.concat('/',month,'/',year))] = {{ releve.valeurRelAni }};

												{# SI deja la date ALORS faire la moyenne des valeurs
												if(donnees[(day.concat('/',month,'/',year))]){
													for (){

													}
												}else{
													donneesTemp[(day.concat('/',month,'/',year))] = {{ releve.valeurRelAni }};
												}
												#}
												

											</script>
										{% endif %}
									{% endfor %}
								{% endfor %}
							{% endif %}
						{% endfor %}
					<script>
						donnees.push(donneesTemp);
						
					</script>
					{% set i = i + 1 %}
				{% else %}
					<tr>
						<td colspan="25">Aucun résultat</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{% if lots|length>1 %}
			<div class="checkbox-custom chekbox-primary">
				<input onchange="toggle_by_class({{ i }});" type="checkbox">
				<label>Afficher les lots fermés</label>
			</div>
		{% endif %}

		<div><canvas id="chartLot" style="max-width:100%; max-height:500px;"></canvas></div>
		<script>
			console.log(donnees);
			const ctx = document.getElementById('chartLot').getContext('2d');
			const data = {
				type: 'line',
				data: {
					labels: Object.keys(donnees[rangee]),
					datasets: [{
						label: 'Poids moyen',
						data: Object.values(donnees[rangee]),
						backgroundColor: [
							'rgba(255, 0, 0, 0.2)'
						],
						borderColor: [
							'rgba(255, 0, 0, 1)',
						],
						borderWidth: 1
					}]
				},
				options: {
					scales: {
						y: {
							beginAtZero: true
						}
					}
				}
			}
			const myChart = new Chart(ctx, data);
